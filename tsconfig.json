{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "paths": {
      "@*": [
        "src*"
      ],
      "actions/*": ["src/actions/*"],
      "config": ["config.ts"],
      "extensions/*": ["src/extensions/*"],
      "predicates/*": ["src/predicates/*"],
      "types/*": ["src/types/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "include": [
    "typings/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
